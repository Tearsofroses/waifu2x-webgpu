# --- PATHS ---
# Where the raw zip files are downloaded
RAW_DATA_DIR=./data/anime_hq

# Where the extracted images live (The actual training data)
DATASET_PATH=./data/anime_hq/images

# Where to save/load checkpoints
CHECKPOINT_DIR=./checkpoints

# Path to a specific model to resume from or fine-tune (e.g., for Denoise/Robust training)
BASE_MODEL_PATH=./checkpoints/model_epoch_30.pth

# --- HYPERPARAMETERS ---
BATCH_SIZE=8
EPOCHS=30
LEARNING_RATE=1e-5
DEVICE=cuda

# --- UTILS ---
# Set to True to shut down PC after run_overnight.py finishes
SHUTDOWN_ON_FINISH=False